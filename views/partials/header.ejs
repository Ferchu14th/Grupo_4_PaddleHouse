<header>
    <div class="top-header">
        <div class="logo-nav-iconos">
            <div class="logo">
                <a href="/home"><img class="logo-foto" src="/images/LogoPaddleHouse.jpg" alt="Logo de PaddelHouse"></a>
            </div>
            <div class="form-buscador">
                <form class="formSearch" action="">
                    <input id="search" type="text" class="input-search" placeholder="BUSCAR PRODUCTOS">
                </form>
                <script defer src="/js/search.js"></script>
                <div>
                    <button class="button-search"><i class="fa fa-search"></i></button>
                </div>
            </div>
            <div class="logos3">

                <% if (locals.isLogged) { %>
                    <li class="nav-item dropdown">
                        <img src="/images/avatars/<%= locals.userLogged.avatar%>">
                        <%= locals.userLogged.name %>
                            <ul class="dropdown-menu">
                                <a class="dropdown-item" href="/users/profile">Mi Perfil</a>
                                <li>
                                    <hr class="divisor">
                                </li>
                                <a class="dropdown-item" href="/users/logout">Cerrar sesion</a>
                            </ul>
                    </li>
                    <% } else { %>
                        <a class="contacto-logo" href=#>CONTACTO:
                            <div></div>
                            <i class="fas fa-address-card"></i>
                        </a>
                        <a class="micuenta-logo" href="/users/login">MI CUENTA:
                            <div></div>
                            <i class="fas fa-sign-in-alt"> </i>
                        </a>

                        <% } %>
                            <a class="carrito-logo" href="/products/cart">CARRITO:
                                <div></div>
                                <i class="fas fa-shopping-basket"> </i>
                                <span class="badge red z-depth-1 mr-1 cart-number">0</span>
                            </a>
                            <% if(locals.userLogged && locals.userLogged.isAdmin==1){ %>
                                <a class="micuenta-logo" href="/products/create">CREAR
                                    <div></div>
                                    <i class="fas fa-plus-circle"></i>
                                </a>
                                <% } %>
            </div>
        </div>
    </div>
    <nav>
        <div class="barra-accesorios">
            <a class="barra-accesoriosA" href="/products/">TODOS</a>
            <a class="barra-accesoriosB" href="/products/PALETA">PALETAS</a>
            <a class="barra-accesoriosC" href="/products/ACCESORIOS">ACCESORIOS</a>
            <a class="barra-accesoriosD" href="/products/BOLSOS-PALETERO">BOLSOS</a>
        </div>

    </nav>
    </div>
